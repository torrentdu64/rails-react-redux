<% if user_signed_in? %>

  const deviseSign = document.getElementById('devise-sign');
  const bookingForm = document.getElementById('booking-form');


  bookingForm.removeChild(deviseSign);

  const rootHtml = document.createElement('div');
  rootHtml.setAttribute("id", "root");

  console.log(rootHtml);

  bookingForm.prepend(rootHtml);
