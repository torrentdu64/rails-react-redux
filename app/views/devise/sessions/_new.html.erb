<h2>Log in</h2>

<%= simple_form_for(User.new({} || resource), as: resource_name, url: session_path(resource_name), remote: true) do |f| %>

  <% if @msg_error.present? %>
  <h1><%= @msg_error %></h1>
  <% end %>

  <div class="form-inputs">
    <%= f.hidden_field :profile_id, :value =>  params[:id] %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", id: "log-in-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


